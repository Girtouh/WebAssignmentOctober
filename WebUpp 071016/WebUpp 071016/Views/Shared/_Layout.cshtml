
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <style>
        a#headbar {
            color: rgb(250, 250, 250);
        }
    </style>
</head>
<body style="text-align:center; border-collapse:collapse; padding-top:100px;">
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid" style="background-color:rgb(60, 60, 60);">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapse" data-toggle="collapse" data-target="navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>

            <div class="collapse navbar-collapse" id="navbar-collapse-1" style="background-color:rgb(60, 60, 60);color:rgb(250, 250, 250)">
                <ul class="nav navbar-nav">
                    <li> <h3>@ViewBag.Title</h3></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a id="headbar" href="/">Hem</a></li>
                    <li><a id="headbar" href="/Home/About">Om mig</a></li>
                    <li><a id="headbar" href="/Home/Contact">Kontakt</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div>
        @RenderBody()
    </div>
</body>
</html>
